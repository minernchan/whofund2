<!DOCTYPE html>
<html>
  <head>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <% include partials/base.ejs %>

    <div
      class="container-fluid"
      style="text-align: center; margin-top: 2%; margin-bottom: 5%;"
    >
      <div class="row">
        <div style="float:left; width:100%; height:100%;"></div>

        <!--Content-->
        <div class="col-8 offset-2">
          <h1>Projects by users you follow</h1>
          <br />
          <div class="container">
            <div class="row">
              <% projArr.forEach((item)=> { %>
              <div class="col-4" style="margin-top: 2%;">
                <div class="card">
                  <div class="card-body">
                    <h6 class="card-title">
                      <a href="/project/<%=item.projtitle%>"
                        ><%=item.projtitle %></a
                      >
                    </h6>
                    <p class="card-text">
                      <small class="text-muted"
                        >Owned By: <%=item.username%></small
                      >
                    </p>
                  </div>
                </div>
              </div>
              <% })%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
